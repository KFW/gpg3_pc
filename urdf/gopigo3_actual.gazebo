<?xml version='1.0'?>
<robot name="gopigo3">

<!--  v4: downsized to reflect correct size of robot 
      model updated to reflect better actual robot
-->


  <!-- Materials -->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <material name="green">
    <color rgba="0 1 0 1"/>
  </material>

  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>

  <material name="orange">
    <color rgba="1 0.54 0 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="grey">
    <color rgba="0.75 0.75 0.75 1"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="0.200 0.088 0.080"/> <!-- original <box size="0.25 0.25 0.125"/> -->
      </geometry>
      <material name="black"/>
    </visual>

    <!-- Base collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="0.200 0.088 0.080"/> <!-- original <box size="0.25 0.25 0.125"/> -->
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.6"/>
      <inertia ixx="9.2425e-06" ixy="0.0" ixz="0.0" iyy="9.2425e-06" iyz="0.0" izz="1.536e-05"/>
    </inertial>

    <!-- Caster attachment -->
    <visual name="caster_visual">
      <origin xyz="-0.085 0 -0.04" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.025" />
      </geometry>
      <material name="grey"/>
    </visual>

    <collision name="caster_collision">
      <origin xyz="-0.085 0 -0.04" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.025" />
      </geometry>
    </collision>

    <inertial name="caster_inertia">
      <origin xyz="-0.085 0 -0.04" rpy="0 0 0" />
      <mass value="0.15"/>
      <inertiai xx="3.75e-05" ixy="0.0" ixz="0.0" iyy="3.75e-05" iyz="0.0" izz="3.75e-05"/>
    </inertial>
  </link>

<!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 -0.013 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.026" radius="0.032" /> <!-- original <cylinder length="0.05" radius="0.1" /> -->
      </geometry>
      <material name="yellow"/>
    </visual>
  <!-- Right Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
         <cylinder length="0.025" radius="0.032" /> <!-- original <cylinder length="0.05" radius="0.1" /> -->
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <mass value="0.03"/>
      <inertia ixx="9.2425e-06" ixy="0.0" ixz="0.0" iyy="9.2425e-06" iyz="0.0" izz="1.536e-05"/>
    </inertial>
  </link>

  <!-- Right Wheel JOINT base_link -->
  <joint name="joint_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.020 -0.044 -0.03" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

  <!-- Left Wheel JOINT base_link -->
  <joint name="joint_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.020 0.044 -0.03" rpy="0 0 0" /> 
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0.013 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.026" radius="0.032" /> <!-- original <cylinder length="0.05" radius="0.1" /> -->
      </geometry>
      <material name="yellow"/>
    </visual>
    <!-- Left Wheel collision, mass and inertia -->
    <collision>
      <origin xyz="0 -0.013 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.025" radius="0.032" /> <!-- original <cylinder length="0.05" radius="0.1" /> -->
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 -0.013 0" rpy="1.570795 0 0" />
      <mass value="0.03"/>
      <inertia ixx="9.2425e-06" ixy="0.0" ixz="0.0" iyy="9.2425e-06" iyz="0.0" izz="1.536e-05"/>
    </inertial>
  </link>

  <!-- Distance Sensor -->
  <link name="distance_sensor">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.005 0.005 0.005"/>
      </geometry>
      <material name="orange"/>
    </visual>
  </link> 
 
  <joint name="distance_sensor_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.103 0 -0.01" rpy="0 0 0"/> <!-- original xyz="0.1225 0 0.065"-->
    <parent link="base_link"/>
    <child link="distance_sensor"/>
  </joint>


  <!-- Distance Sensor solid JOINT base_link -->
  <joint name="distance_sensor_solid_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.0675 0 -0.01" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="distance_sensor_solid"/>
  </joint>
  <!-- Distance Sensor solid-->
  <link name="distance_sensor_solid">
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 1.570795" /> <!-- original xyz="0.1 0 0.0775" -->
      <geometry>
        <box size="0.005 0.005 0.005"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 1.570795" /><!-- original xyz="0.1 0 0.0775" -->
      <geometry>
        <mesh filename="package://gopigo3_navigation/meshes/IR_Sensor_Sharp_GP2Y_solid.stl" scale="0.0025 0.0025 0.0025"/>
      </geometry>
      <material name="white"/>
    </visual>

    <inertial>
      <origin xyz="0 0 0" rpy="1.570795 0 1.570795" />
      <mass value="1e-5" />
      <origin xyz="0.005 0 -0.01" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>caster_visual
  </link>

  <!-- 2D Camera as a mesh of actual PiCamera -->
  <link name="camera">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.570795 0" />
      <geometry>
        <mesh filename="package://gopigo3_navigation/meshes/piCamera.stl" scale="0.00125 0.00125 0.00125"/> <!-- original scale="0.0025 0.0025 0.0025" -->
      </geometry>
      <material name="green"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 -1.570795 0" />
      <geometry>
        <box size="0.015 0.025 0.025"/> <!-- original <box size="0.075 0.075 0.025"/> -->
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 -1.570795 0" />
      <mass value="1e-3" />
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

  <!-- 2D Camera JOINT base_link -->
  <joint name="joint_camera" type="fixed">
    <axis xyz="0 0 1" />
    <origin xyz="0.08 0 0.055" rpy="0 0 0"/> <!-- original xyz="0.125 0 0.025"-->
    <parent link="base_link"/>
    <child link="camera"/>
  </joint>

  <!-- Laser Distance Sensor -->
  <link name="base_scan">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.005 0.005 0.005"/>
      </geometry>
      <material name="red"/>
    </visual> 
  </link>

  <!-- Laser Distance Sensor JOINT base_link -->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="-0.005 0 0.10" rpy="0 0 0"/> <!-- original xyz="0.01 0.05 0.125" rpy="0 0 -1.6"-->
  </joint>

  <!-- base_scan_solid JOINT base_scan -->
  <joint name="scan_solid_joint" type="fixed">
    <parent link="base_scan"/>
    <child link="base_scan_solid"/>
    <origin xyz="0 0 0.0075" rpy="0 0 0"/>
  </joint>

  <!-- base_scan_solid -->
  <link name="base_scan_solid">
    <visual> <!-- <visual name="laser_scan_body"> -->
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://gopigo3_navigation/meshes/X4.stl" scale="0.001 0.001 0.001"/> <!-- original scale="0.0015 0.0015 0.0015" -->
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.06" radius="0.033"/> <!-- original <cylinder length="0.01575" radius="0.0275"/> -->
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.17" />
      <inertia ixx="9.72825e-05" ixy="0.0" ixz="0.0" iyy="9.72825e-05" iyz="0.0" izz="9.2565e-05" />
    </inertial>
  </link>

  <!-- GAZEBO MATERIAL TAGS (colors for sensors under <sensor> tags) -->
  <gazebo reference="base_link">
    <material>Gazebo/BlackTransparent</material>
    <pose>0 0 1.5 0 0 0</pose>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <gazebo reference="left_wheel">
    <material>Gazebo/Yellow</material>
  </gazebo> 

  <gazebo reference="base_scan_solid">
    <material>Gazebo/Blue</material>
  </gazebo> 


  <!-- Differential Drive Controller -->
  <!-- https://answers.ros.org/question/236122/diffdrive-odometry-source-is-missing -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>joint_left_wheel</leftJoint>
      <rightJoint>joint_right_wheel</rightJoint>
      <wheelSeparation>0.117</wheelSeparation> <!-- original 0.6 -->
      <wheelDiameter>0.0665</wheelDiameter> <!-- original 0.3 -->
      <torque>0.1</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>base_link</robotBaseFrame>
      <legacyMode>false</legacyMode>
      <publishTf>1</publishTf>
      <rosDebugLevel>na</rosDebugLevel>
      <publishWheelTF>false</publishWheelTF>
      <publishOdomTF>true</publishOdomTF>
      <publishWheelJointState>false</publishWheelJointState>
      <wheelAcceleration>0</wheelAcceleration>
      <wheelTorque>5</wheelTorque>
    </plugin>
  </gazebo>
<!-- Distance Sensor controller -->
  <gazebo reference="distance_sensor">        
    <sensor type="ray" name="laser_distance">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
         <scan>
            <horizontal>
               <samples>10</samples>
               <resolution>1</resolution> 
               <min_angle>-0.01</min_angle>
               <max_angle>0.01</max_angle>
            </horizontal>
            <vertical>
               <samples>10</samples>
               <resolution>1</resolution> 
               <min_angle>-0.01</min_angle>
               <max_angle>0.01</max_angle> 
            </vertical>
         </scan>
         <range>
            <min>0.01</min>
            <max>3</max>
            <resolution>0.01</resolution>
         </range>
      </ray>
      <plugin filename="libgazebo_ros_range.so" name="gazebo_ros_ir">
         <gaussianNoise>0.005</gaussianNoise>
         <alwaysOn>true</alwaysOn>
         <updateRate>0.0</updateRate>
         <topicName>gopigo/distance</topicName>
         <frameName>distance_sensor</frameName>
         <radiation>INFRARED</radiation>
         <fov>0.02</fov>
      </plugin>
    </sensor>  
   </gazebo>

<!-- 2D Camera controller -->
  <gazebo reference="camera">
    <sensor type="camera" name="camera1">
      <update_rate>30.0</update_rate>
      <camera name="front">
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>gopigo/camera1</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frameName>camera</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
    <material>Gazebo/Green</material>
  </gazebo>

  <!-- Laser Distance Sensor YDLIDAR X4 controller-->
  <gazebo reference="base_scan">
    <sensor type="ray" name="lds_lfcd_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize> <!-- ########### should be false except for testing ########### -->
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>0.5</resolution>
            <min_angle>0.0</min_angle>
            <max_angle>6.28319</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>10</max>
          <resolution>0.015</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <!-- Noise parameters based on published spec for YDLIDAR X4
               is 1.5% at half range 4m (= 60mm, "+-160mm" accuracy at max. range 8m).
               A mean of 0.0m and stddev of 0.020m will put 99.7% of samples
               within 0.16m of the true reading. -->
          <mean>0.0</mean>
          <stddev>0.02</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_lds_lfcd_controller" filename="libgazebo_ros_laser.so">
        <!-- topicName>/gopigo/scan</topicName -->
        <topicName>scan</topicName>
        <frameName>base_scan</frameName>
      </plugin>
    </sensor>
  </gazebo>

</robot>